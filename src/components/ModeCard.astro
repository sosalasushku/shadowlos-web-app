---
import TheButton from './TheButton.astro';

interface Props {
  title: string;
  description: string;
  href: string;
  disabled?: boolean;
}

const { title, description, href, disabled = false } = Astro.props;
---

<TheButton 
  {href} 
  class:list={[
    "block text-left p-6 h-auto", 
    disabled && "opacity-50 cursor-not-allowed pointer-events-none"
  ]}
  disabled={disabled}
>
  <div>
    <h3 class="text-lg font-bold mb-2">{title}</h3>
    <p class="text-sm text-gray-100">
      {disabled ? "Недоступен для данной платформы" : description}
    </p>
  </div>
</TheButton> 