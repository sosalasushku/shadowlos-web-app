 ---
interface Props {
  href?: string;
  class?: string;
  disabled?: boolean;
}

const { href, class: className, disabled = false } = Astro.props;
---

<a
  href={disabled ? undefined : href}
  class:list={[
    "text-center px-6 py-3 bg-btn-bg text-btn-text rounded-lg transition-all duration-100 no-underline",
    !disabled && "active:scale-[98%]",
    disabled && "opacity-50 cursor-not-allowed",
    className
  ]}
  {...disabled && { 'aria-disabled': 'true' }}
>
  <slot />
</a> 