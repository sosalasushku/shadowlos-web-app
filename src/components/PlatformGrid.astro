---
import TheButton from './TheButton.astro';
import { platforms } from '../data/platforms';
---
<div class="px-4 py-8">
  <h2 class="text-xl font-bold text-center">Выберите платформу</h2>
  <div class="grid grid-cols-2 gap-4 mt-8">
    {platforms.map(platform => (
      <TheButton href={`/platform/${platform.id}`}>
        {platform.name}
      </TheButton>
    ))}
  </div>
</div> 